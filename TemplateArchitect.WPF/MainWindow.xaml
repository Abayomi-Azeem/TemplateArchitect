<Window x:Class="TemplateArchitect.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateArchitect.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Architecture Type:"></TextBlock>
        <ComboBox Grid.Row="1"
          Margin="0,5,0,10"
          DisplayMemberPath="DisplayName"
          SelectedValuePath="Value"
          SelectedValue="{Binding SelectedArchitecture, Mode=TwoWay}"
          ItemsSource="{Binding AvailableArchitectureTypes}">
        </ComboBox>
        <Grid Grid.Row="2" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <CheckBox Content="Create Separate Class Library for Contracts"
                      IsChecked="{Binding ShouldCreateSeparateContractsProject, Mode=TwoWay}"
                      Margin="0,10,0,5"
                      Width="300"
                      FontWeight="SemiBold"
                      FontSize="14"
                      ></CheckBox>
            <TextBox Grid.Column="1"
                     Height="30"
                     Margin="5,5,5,5"
                     Text="{Binding SeparateContractsProjectName,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}"
                     Visibility="{Binding SeparateContractsProjectNameBoxVisibility}"
                     ></TextBox>
        </Grid>
        <TextBlock Text="Working Directory:"
                   Grid.Row="3"></TextBlock>
        <Grid Grid.Row="4" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="WorkingDirTextBox"
                     Height="30"
                     Margin="0,0,5,0"
                     Text="{Binding WorkingDirectory,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Content="Browse..."
                    Grid.Column="1"
                    Width="80"
                    Command="{Binding BrowseCommand}">                
            </Button>
            
        </Grid>
        <TextBlock Text="Application Name:" Grid.Row="5"></TextBlock>
        <TextBox x:Name="CommandTextBox"
                 Grid.Row="6"
                 Height="30"
                 Margin="0,5,0,10"
                 Text="{Binding ApplicationName,
                                Mode=TwoWay,
                                UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBlock Text="DotNet Version:"
          Grid.Row="7"
          Margin="0,0,0,5"></TextBlock>
        <ComboBox Grid.Row="8"
                  Margin="0,0,0,10"
                  DisplayMemberPath="DisplayName"
                  SelectedValuePath="Value"
                  SelectedValue="{Binding SelectedVersion, Mode=TwoWay}"
                  ItemsSource="{Binding AvailableDotNetVersions}">            
        </ComboBox>
        <Button x:Name="RunButton"
                Content="Run"
                Grid.Row="9"
                Height="30"
                IsEnabled="{Binding CanRun}"
                Command="{Binding MainPageCommand}"></Button>

        <TextBox x:Name="OutputTextBox"
                 Grid.Row="10"
                 Margin="0,10,0,0"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Text="{Binding OutputText}"></TextBox>

    </Grid>
</Window>
